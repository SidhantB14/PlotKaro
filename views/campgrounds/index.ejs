<% layout('layouts/boilerplate')%>

<div class="container mb-2">
    <!-- <div class="container"><h3 id="indexhead">Plots for sale in Gadchiroli</h3></div> -->

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-5">
        <% for (let campground of campgrounds){%>
        <div class="col">
            <div class="card indexcard" style="max-width: 500px;" >
            <div class="row g-0">
                <div class="col-md-12">
                  <div id="campgroundCarousel" class="carousel slide" data-ride="carousel">
                     <div class="carousel-inner">
                         <% campground.images.forEach((img, i) => {  %>
                            <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                                 <img src="<%= img.url%>" class="d-block w-100 carding" alt="">
                            </div>
                         <% }) %>

                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-body">
                    <div class="card-header h6 text-center">
                        <%= campground.title %> at <%= campground.location %> 
                      </div>
                      
                     <ul class="list-group list-group-horizontal indexls">
                     <li class="list-group-item lin"><Span class="font-weight-bold"><%= campground.area %> square foot </Span><li class="list-group-item lin"><Span class="font-weight-bold">₹<%= Math.floor(campground.price/100000)%>L | ₹<%= Math.floor(campground.price/campground.area)%>/sq.ft</Span></li>
                    </ul>
                    
                     <a class="stretched-link" href="/plots/<%=campground._id%>"></a>
                 </div>
                </div>
            </div>
        
        </div>
</div>
<% }%>
</div>


<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>